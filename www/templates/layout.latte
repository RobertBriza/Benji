<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title n:snippet="title" n:inner-block="title">Nette Web</title>
	{if $vite !== null && $vite->isEnabled()}
		<script type="module" src="{='@vite/client'|asset}"></script>
	{/if}

	<script src="{='src/scripts/main.js'|asset}" type="module"></script>
	<link rel="stylesheet" href="{='src/styles/main.css'|asset}">
</head>

<body data-controller="body">
<div class="flex g flex-col h-screen bg-cover bg-center" style="background-image: url('/cdn/IMG_8007.jpeg');">
	<header n:snippet="header" class="flex-none bg-black bg-opacity-40 text-white">
		{include header.latte}
	</header>
	<div n:snippet="flashes" class="fixed top-10 left-0 w-full bg-slate-700 z-50" data-naja-snippet-append>
		{include flashes.latte}
	</div>

	<div n:inner-block="content" n:snippet="content" class="container overflow-hidden"></div>

	<footer class="mt-auto">
		{include footer.latte}
	</footer>
</div>
{block scripts}{/block}
</body>
</html>